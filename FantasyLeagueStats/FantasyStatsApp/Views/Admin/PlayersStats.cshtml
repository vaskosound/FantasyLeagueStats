@model IScheduler

@{
    ViewBag.Title = "Players Statisics";
}

<div class="row">
    <div class="col-lg-8 h2">@ViewBag.Title</div>
    <div class="col-lg-4">
        @Ajax.ActionLink("Start Schedule", "StartSchedule", null, new AjaxOptions()
            {
                HttpMethod = "GET",
                InsertionMode = InsertionMode.Replace,
                UpdateTargetId = "scheduler",
            },
            new { @class = "btn btn-primary text-right" })

        @Ajax.ActionLink("Stop Schedule", "StopSchedule", null, new AjaxOptions()
            {
                HttpMethod = "GET",
                InsertionMode = InsertionMode.Replace,
                UpdateTargetId = "scheduler",
            },
            new { @class = "btn btn-primary text-right" })
        
        @Ajax.ActionLink("Update Data", "UpdateData", null, new AjaxOptions()
            {
                HttpMethod = "GET",
                InsertionMode = InsertionMode.Replace,
                UpdateTargetId = "players-stats",
                LoadingElementId = "loading",
                LoadingElementDuration = 1000
            },
            new { @class = "btn btn-primary text-right" })
    </div>
</div>
<div id="scheduler">
    @Html.Partial("_Scheduler")
</div>
<div id="loading">Updating...</div>
<div id="players-stats">
    @Html.Partial("_PlayersStatsGrid")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}